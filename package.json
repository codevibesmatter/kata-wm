{
  "name": "@codevibesmatter/kata",
  "version": "0.0.1",
  "description": "Structured workflow kata for Claude Code â€” modes, phases, tasks, and stop hooks for disciplined AI coding sessions",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    }
  },
  "bin": {
    "kata": "./kata"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/",
    "kata",
    "modes.yaml",
    "templates/",
    "batteries/"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "node --test dist/testing/index.js 2>/dev/null || true",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude-code",
    "kata",
    "workflow",
    "cli",
    "ai-agent",
    "session-management",
    "agent-loop",
    "modes"
  ],
  "author": "codevibesmatter",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codevibesmatter/kata.git"
  },
  "homepage": "https://github.com/codevibesmatter/kata#readme",
  "bugs": {
    "url": "https://github.com/codevibesmatter/kata/issues"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "typescript": "~5.8.3"
  }
}
